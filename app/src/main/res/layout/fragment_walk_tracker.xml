<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="edu.cnm.deepdive.irt.hikethrough.fragments.WalkTrackerFragment">

  <!-- TODO: Update blank fragment layout -->

  <TextView
    android:id="@+id/totalTravelCurrency"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Total Travel Currency"
    android:textAppearance="@android:style/TextAppearance.Material.Large"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/convertWalkButton"
    app:layout_constraintRight_toRightOf="@+id/totalTravelCurrencyNumber"
    app:layout_constraintLeft_toLeftOf="@+id/totalTravelCurrencyNumber"/>
  <android.support.design.widget.FloatingActionButton
    android:id="@+id/convertWalkButton"
    android:layout_width="101dp"
    android:layout_height="101dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    app:fabSize="normal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.501"
    app:layout_constraintLeft_toLeftOf="@+id/distanceConverted"
    app:layout_constraintRight_toRightOf="@+id/distanceConverted"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_nav_walkconverter_black_24dp"
    app:layout_constraintVertical_bias="0.499"/>
  <TextView
    android:id="@+id/distanceConverted"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Distance Converted"
    android:textAppearance="@android:style/TextAppearance.Material.Large"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/convertWalkButton"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintRight_toRightOf="@+id/distanceConvertedNumber"
    app:layout_constraintLeft_toLeftOf="@+id/distanceConvertedNumber"/>
  <TextView
    android:id="@+id/totalTravelCurrencyNumber"
    android:layout_width="84dp"
    android:layout_height="56dp"
    android:text="00"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/totalTravelCurrency"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/convertWalkButton"
    app:layout_constraintVertical_bias="0.611"
    app:layout_constraintRight_toRightOf="@+id/convertWalkButton"
    app:layout_constraintLeft_toLeftOf="@+id/convertWalkButton"/>
  <TextView
    android:id="@+id/distanceConvertedNumber"
    android:layout_width="117dp"
    android:layout_height="57dp"
    android:text="00"
    tools:layout_editor_absoluteX="147dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/distanceConverted"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
